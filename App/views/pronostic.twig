{% extends "template.twig" %}

{% block title %}Pronoostic{%  endblock %}

{% block title_content %}Be-Pronostico{% endblock %}


{% block content %}

    <form class="form-signin" action="{{ app.url_generator.generate('validation') }}" method="POST">
        <h2 class="form-signin-heading">Pronostic Premier League</h2>
        <label for="score_local" >{{ local_name }}</label>
        <input type="text" id="score_local" name="pseudo" class="form-control" placeholder="Dexter Olivier" value="{{ local_pronos }}" {% if (activate_fields == false) %}readonly="readonly" {% endif %} required autofocus>
        <label for="score_visitor" >{{ visitor_name }}</label>
        <input type="text" id="score_visitor" name="pseudo" class="form-control" placeholder="Dexter Olivier" value="{{ visitor_pronos }}" {% if (activate_fields == false) %}readonly="readonly" {% endif %} required autofocus>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Valider</button>
    </form>
{% endblock %}
